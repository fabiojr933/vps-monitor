<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>VPS Monitor v1.0.0</title>

  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<%
  const cpu = data?.cpu || {};
  const memory = data?.memory || {};
  const system = data?.system || {};
  const ports = data?.ports || [];
%>

<main class="main-container container-fluid">

<h1 class="vps-title">• VPS Monitor <small>v1.0.0</small></h1>

<div class="row g-4">

  <!-- CPU -->
  <div class="col-md-6 vps-card">
    <h5><i class="bi bi-cpu"></i> CPU</h5>

    <div class="stats-row">
      <span>Modelo</span>
      <span><%= cpu.model || '—' %></span>
    </div>

    <div class="stats-row">
      <span>Cores / Threads</span>
      <span><%= cpu.cores || 0 %> / <%= cpu.threads || 0 %></span>
    </div>

    <div class="stats-row">
      <span>Load</span>
      <span><%= cpu.load || '0.00' %></span>
    </div>

    <div class="progress-custom">
      <div class="progress-bar-inner" style="width:<%= cpu.usage || 0 %>%"></div>
    </div>
  </div>

  <!-- MEMÓRIA -->
  <div class="col-md-6 vps-card">
    <h5><i class="bi bi-memory"></i> MEMÓRIA</h5>

    <div class="stats-row">
      <span>Total</span>
      <span><%= memory.total || 0 %> GB</span>
    </div>

    <div class="stats-row">
      <span>Usado</span>
      <span><%= memory.used || 0 %> GB</span>
    </div>

    <div class="stats-row">
      <span>Livre</span>
      <span><%= memory.free || 0 %> GB</span>
    </div>

    <div class="progress-custom">
      <div class="progress-bar-inner" style="width:<%= memory.percent || 0 %>%"></div>
    </div>
  </div>

  <!-- SISTEMA -->
  <div class="col-12 vps-card">
    <h5><i class="bi bi-hdd"></i> SISTEMA</h5>

    <div class="stats-row">
      <span>Hostname</span>
      <span id="hostname"><%= system.hostname || '—' %></span>
    </div>

    <div class="stats-row">
      <span>OS</span>
      <span><%= system.os || '—' %></span>
    </div>

    <div class="stats-row">
      <span>Arquitetura</span>
      <span><%= system.arch || '—' %></span>
    </div>

    <div class="stats-row">
      <span>IP Externo</span>
      <span id="ipExternal" class="text-neon"><%= system.ipExternal || '—' %></span>
    </div>

    <div class="stats-row">
      <span>Uptime</span>
      <span><%= system.uptime || '—' %></span>
    </div>
  </div>

  <!-- PORTAS -->
  <div class="col-12 vps-card">
    <h5><i class="bi bi-shield-lock"></i> PORTAS</h5>

    <% if (ports.length === 0) { %>
      <div class="text-muted">Nenhuma porta monitorada</div>
    <% } %>

    <% ports.forEach(p => { %>
      <div class="port-row">
        <div class="port-number"><%= p.port %></div>
        <div class="port-name"><%= p.name %> (<%= p.type %>)</div>
        <div class="status-badge online">ONLINE</div>
      </div>
    <% }) %>
  </div>

</div>
</main>

<script>
async function refreshData() {
  try {
    const res = await fetch('/api/status');
    const data = await res.json();

    if (!data?.system) return;

    const hostname = document.getElementById('hostname');
    const ipExternal = document.getElementById('ipExternal');

    if (hostname) hostname.innerText = data.system.hostname || '—';
    if (ipExternal) ipExternal.innerText = data.system.ipExternal || '—';

  } catch (e) {
    console.error('Erro ao atualizar dados', e);
  }
}

setInterval(refreshData, 5000);
</script>

</body>
</html>
