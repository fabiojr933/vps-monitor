<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VPS Monitor v1.0.0</title>

  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>

<body>

<main class="main-container">
  <div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="vps-title"><span>•</span> VPS Monitor <small>v1.0.0</small></h1>
        <p class="vps-subtitle">SYSTEM HEALTH & PERFORMANCE DASHBOARD</p>
      </div>
      <div class="top-status">
        <div class="uptime-badge">
          <i class="bi bi-clock"></i> <%= data.sistema.uptime %>
        </div>
        <button onclick="location.reload()" class="refresh-btn">
          <i class="bi bi-arrow-clockwise"></i>
        </button>
      </div>
    </div>

    <!-- ALERTAS -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="vps-card p-3 d-flex flex-wrap gap-3">
          <span class="badge <%= data.alertas.cpuAlta ? 'bg-danger' : 'bg-success' %>">CPU</span>
          <span class="badge <%= data.alertas.memoriaAlta ? 'bg-danger' : 'bg-success' %>">MEMÓRIA</span>
          <span class="badge <%= data.alertas.discoCheio ? 'bg-danger' : 'bg-success' %>">DISCO</span>
          <span class="badge <%= data.alertas.temperaturaAlta ? 'bg-danger' : 'bg-success' %>">TEMP</span>
        </div>
      </div>
    </div>


    <!-- SISTEMA -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="vps-card p-4">
          <div class="card-header-vps mb-3">
            <i class="bi bi-hdd-stack"></i> INFORMAÇÕES DO SISTEMA
          </div>

          <div class="row g-4">
            <div class="col-md-4"><b>Hostname:</b> <%= data.sistema.hostname %></div>
            <div class="col-md-4"><b>OS:</b> <%= data.sistema.os %></div>
            <div class="col-md-4"><b>Arquitetura:</b> <%= data.sistema.arquitetura %></div>
            <div class="col-md-4"><b>IP Externo:</b> <%= data.sistema.ipExterno %></div>
            <div class="col-md-4"><b>IP Local:</b> <%= data.sistema.ipLocal %></div>
            <div class="col-md-4"><b>Uptime:</b> <%= data.sistema.uptime %></div>
          </div>
        </div>
      </div>
    </div> </br>

    <!-- CPU / MEMÓRIA -->
    <div class="row g-4">
      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps"><i class="bi bi-cpu"></i> CPU</div>
          <div class="card-body-vps">
            <div class="stats-row"><span>Modelo</span><span><%= data.cpu.modelo %></span></div>
            <div class="stats-row"><span>Cores / Threads</span><span><%= data.cpu.cores %></span></div>
            <div class="stats-row"><span>Load</span><span><%= data.cpu.load %></span></div>
            <div class="stats-row"><span>Temperatura</span><span><%= data.cpu.temperatura %> °C</span></div>

            <div class="progress-section mt-3">
              <div class="d-flex justify-content-between">
                <span>Uso de CPU</span>
                <span><%= data.cpu.uso %>%</span>
              </div>
              <div class="progress-custom">
                <div class="progress-bar-inner" style="width:<%= data.cpu.uso %>%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps"><i class="bi bi-memory"></i> MEMÓRIA</div>
          <div class="card-body-vps">
            <div class="stats-row"><span>Total</span><span><%= data.memoria.total %></span></div>
            <div class="stats-row"><span>Em Uso</span><span><%= data.memoria.uso %></span></div>
            <div class="stats-row"><span>Livre</span><span><%= data.memoria.livre %></span></div>

            <div class="progress-section mt-3">
              <div class="d-flex justify-content-between">
                <span>Uso de RAM</span>
                <span><%= data.memoria.percent %>%</span>
              </div>
              <div class="progress-custom">
                <div class="progress-bar-inner" style="width:<%= data.memoria.percent %>%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- DISCO / REDE -->
    <div class="row g-4 mt-1">
      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps"><i class="bi bi-hdd"></i> DISCO</div>
          <div class="card-body-vps">
            <div class="stats-row"><span>Total</span><span><%= data.disco.total %></span></div>
            <div class="stats-row"><span>Em Uso</span><span><%= data.disco.uso %></span></div>
            <div class="stats-row"><span>Leitura</span><span><%= data.disco.leitura %></span></div>
            <div class="stats-row"><span>Escrita</span><span><%= data.disco.escrita %></span></div>

            <div class="progress-section mt-3">
              <div class="d-flex justify-content-between">
                <span>Uso de Disco</span>
                <span><%= data.disco.percent %>%</span>
              </div>
              <div class="progress-custom">
                <div class="progress-bar-inner" style="width:<%= data.disco.percent %>%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps"><i class="bi bi-diagram-3"></i> REDE</div>
          <div class="card-body-vps">
            <div class="stats-row"><span>RX</span><span><%= data.rede.rx %></span></div>
            <div class="stats-row"><span>TX</span><span><%= data.rede.tx %></span></div>
            <div class="stats-row"><span>Conexões</span><span><%= data.rede.conexoes %></span></div>
            <div class="stats-row"><span>Processos</span><span><%= data.rede.processos %></span></div>
            <div class="stats-row"><span>Usuários</span><span><%= data.rede.usuarios %></span></div>
          </div>
        </div>
      </div>
    </div>


 <div class="row mt-4 mb-5">
      <div class="col-12">
        <div class="vps-card">
          <div class="card-header-vps mb-4">
            <i class="bi bi-shield-lock"></i> PORTAS
          </div>
          <div class="port-list">
          <% if (data.portas.length > 0) { %>
            <% data.portas.forEach(p => { %>
              <div class="port-row">
                <div class="port-number"><%= p.porta %></div>
                <div class="port-name"><%= p.nome %> <span class="fw-bold">(<%= p.tipo %>)</span></div>
                <div class="status-badge <%= p.status %>">
                  <span>•</span> <%= p.status.toUpperCase() %>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="p-3 text-center fw-bold">Nenhuma porta ativa detectada.</div>
          <% } %>
        </div>
        </div>
      </div>
    </div>

    <!-- FOOTER -->
    <div class="d-flex justify-content-between footer-text mt-4">
      <span>LAST SYNC: <%= data.lastSync %></span>
      <span>VPS MONITOR © 2026 - FOX SISTEMAS</span>
    </div>

  </div>
</main>

<script>
  setTimeout(() => location.reload(), 30000);
</script>

</body>
</html>
