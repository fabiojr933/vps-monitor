<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VPS Monitor v1.0.0</title>
  <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<main id="main" class="main-container">
  <div class="container-fluid">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="vps-title"><span>•</span> VPS Monitor <small>v1.0.0</small></h1>
        <p class="vps-subtitle">SYSTEM HEALTH & PERFORMANCE DASHBOARD</p>
      </div>
      <div class="top-status">
        <div class="uptime-badge">
          <i class="bi bi-clock"></i> <%= data.sistema.uptime %>
        </div>
        <button onclick="location.reload()" class="refresh-btn"><i class="bi bi-arrow-clockwise"></i></button>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps">
            <i class="bi bi-cpu"></i> CPU
          </div>
          <div class="card-body-vps">
            <div class="stats-row"><span>Modelo</span><span class="fw-bold"><%= data.cpu.modelo %></span></div>
            <div class="stats-row"><span>Cores / Threads</span><span><%= data.cpu.cores %></span></div>
            <div class="stats-row"><span>Load Average</span><span class="fw-bold"><%= data.cpu.load %></span></div>
            
            <div class="progress-section mt-4">
              <div class="d-flex justify-content-between mb-1">
                <span class="label">Uso de CPU</span>
                <span class="value"><%= data.cpu.uso %>%</span>
              </div>
              <div class="progress-custom">
                <div class="progress-bar-inner" style="width: <%= data.cpu.uso %>%"></div>
              </div>
              <div class="d-flex justify-content-between mini-label mt-1">
                <span><%= data.cpu.uso %>% USADO</span>
                <span>100% TOTAL</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps">
            <i class="bi bi-memory"></i> MEMÓRIA
          </div>
          <div class="card-body-vps">
            <div class="stats-row"><span>Total</span><span><%= data.memoria.total %></span></div>
            <div class="stats-row"><span>Em Uso</span><span><%= data.memoria.uso %></span></div>
            <div class="stats-row"><span>Livre</span><span><%= data.memoria.livre %></span></div>
            
            <div class="progress-section mt-4">
              <div class="d-flex justify-content-between mb-1">
                <span class="label">Memória RAM</span>
                <span class="value"><%= data.memoria.percent %>%</span>
              </div>
              <div class="progress-custom">
                <div class="progress-bar-inner" style="width: <%= data.memoria.percent %>%"></div>
              </div>
              <div class="d-flex justify-content-between mini-label mt-1">
                <span><%= data.memoria.uso %> USADO</span>
                <span><%= data.memoria.total %> TOTAL</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps">
            <i class="bi bi-hdd-network"></i> ESPAÇO EM DISCO
          </div>
          <div class="card-body-vps">
            <div class="stats-row"><span>Filesystem</span><span><%= data.disco.fs %></span></div>
            <div class="stats-row"><span>Tipo</span><span><%= data.disco.type %></span></div>
            <div class="stats-row"><span>Mount Point</span><span><%= data.disco.mount %></span></div>
            <div class="stats-row"><span>Total</span><span><%= data.disco.total %></span></div>
            <div class="stats-row"><span>Livre</span><span><%= data.memoria.livre %></span></div>
            
            <div class="progress-section mt-4">
              <div class="d-flex justify-content-between mb-1">
                <span class="label">Uso de Disco</span>
                <span class="value"><%= data.disco.percent %>%</span>
              </div>
              <div class="progress-custom">
                <div class="progress-bar-inner" style="width: <%= data.disco.percent %>%"></div>
              </div>
              <div class="d-flex justify-content-between mini-label mt-1">
                <span><%= data.disco.uso %> USADO</span>
                <span><%= data.disco.total %> TOTAL</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="vps-card">
          <div class="card-header-vps">
            <i class="bi bi-diagram-3"></i> REDE
          </div>
          <div class="card-body-vps">
            <div class="stats-row"><span>Dados Recebidos (RX)</span><span><%= data.rede.rx %></span></div>
            <div class="stats-row"><span>Dados Enviados (TX)</span><span><%= data.rede.tx %></span></div>
            <div class="stats-row"><span>Conexões Ativas</span><span class="text-neon"><%= data.rede.conexoes %></span></div>
            <div class="stats-row"><span>Processos Ativos</span><span><%= data.rede.processos %></span></div>
            <div class="stats-row"><span>Usuários Conectados</span><span><%= data.rede.usuarios %></span></div>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12">
        <div class="vps-card p-4">
          <div class="card-header-vps mb-4">
            <i class="bi bi-hdd-stack"></i> INFORMAÇÕES DO SISTEMA
          </div>
          <div class="row g-4">
            <div class="col-md-4 d-flex align-items-center">
              <div class="icon-box-vps"><i class="bi bi-terminal"></i></div>
              <div class="ms-3">
                <div class="mini-label-top">HOSTNAME</div>
                <div class="fw-bold"><%= data.sistema.hostname %></div>
              </div>
            </div>
            <div class="col-md-4 d-flex align-items-center">
              <div class="icon-box-vps"><i class="bi bi-ubuntu"></i></div>
              <div class="ms-3">
                <div class="mini-label-top">OS</div>
                <div class="fw-bold"><%= data.sistema.os %></div>
              </div>
            </div>
            <div class="col-md-4 d-flex align-items-center">
              <div class="icon-box-vps"><i class="bi bi-activity"></i></div>
              <div class="ms-3">
                <div class="mini-label-top">ARQUITETURA</div>
                <div class="fw-bold"><%= data.sistema.arquitetura %></div>
              </div>
            </div>
            <div class="col-md-4 d-flex align-items-center">
              <div class="icon-box-vps"><i class="bi bi-globe"></i></div>
              <div class="ms-3">
                <div class="mini-label-top">IP EXTERNO</div>
                <div class="fw-bold text-neon"><%= data.sistema.ipExterno %></div>
              </div>
            </div>
            <div class="col-md-4 d-flex align-items-center">
              <div class="icon-box-vps"><i class="bi bi-diagram-2"></i></div>
              <div class="ms-3">
                <div class="mini-label-top">IP LOCAL</div>
                <div class="fw-bold"><%= data.sistema.ipLocal %></div>
              </div>
            </div>
            <div class="col-md-4 d-flex align-items-center">
              <div class="icon-box-vps"><i class="bi bi-clock-history"></i></div>
              <div class="ms-3">
                <div class="mini-label-top">UPTIME</div>
                <div class="fw-bold"><%= data.sistema.uptime %></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4 mb-5">
      <div class="col-12">
        <div class="vps-card">
          <div class="card-header-vps mb-4">
            <i class="bi bi-shield-lock"></i> PORTAS
          </div>
          <div class="port-list">
          <% if (data.portas.length > 0) { %>
            <% data.portas.forEach(p => { %>
              <div class="port-row">
                <div class="port-number"><%= p.porta %></div>
                <div class="port-name"><%= p.nome %> <span class="fw-bold">(<%= p.tipo %>)</span></div>
                <div class="status-badge <%= p.status %>">
                  <span>•</span> <%= p.status.toUpperCase() %>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="p-3 text-center fw-bold">Nenhuma porta ativa detectada.</div>
          <% } %>
        </div>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-between footer-text">
      <span>LAST SYNC: <%= data.lastSync %></span>
      <span>VPS MONITOR PRO © 2026 - FOX SISTEMAS</span>
    </div>

  </div>
</main>

</body>

<script>
  // Atualiza a página a cada 30 segundos (30000 milissegundos)
  setTimeout(function(){
     window.location.reload();
  }, 30000);
</script>

</html>